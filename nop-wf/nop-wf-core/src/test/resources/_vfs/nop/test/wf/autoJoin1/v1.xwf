<?xml version="1.0" encoding="UTF-8" ?>
<wf xmlns:c="c" xmlns:cp="cp" x:schema="/nop/schema/wf/wf.xdef" xmlns:x="/nop/schema/xdsl.xdef">

    <diagram/>

    <actions>
        <action displayName="审核" name="sh">
            <transition>
                <to-step stepName="join"/>
            </transition>
        </action>
        <action displayName="审批" name="sp">
            <transition>
                <to-step stepName="ysp"/>
            </transition>
        </action>
    </actions>

    <steps>
        <step displayName="开始步骤" name="wf-start">
            <assignment>
                <actors>
                    <actor actorId="1" actorType="user"/>
                </actors>
            </assignment>
            <ref-actions>
                <ref-action name="sh"/>
            </ref-actions>
        </step>
        <join displayName="会签步骤" specialType="auto" name="join">
            <assignment ignoreNoAssign="false" selection="auto">
                <actors>
                    <actor actorId="1" actorType="user"/>
                    <actor actorId="2" actorType="user"/>
                </actors>
            </assignment>
            <ref-actions>
                <ref-action name="sp"/>
            </ref-actions>
        </join>
        <step displayName="已审批" name="ysp">
            <assignment selection="auto">
                <actors>
                    <actor actorId="1" actorType="user"/>
                </actors>
            </assignment>
            <transition>
                <to-end/>
            </transition>
        </step>
    </steps>

    <x:post-extends>
        <c:import from="/nop/wf/xlib/wf-gen.xlib"/>
        <wf-gen:AutoJoinSupport/>
    </x:post-extends>

    <start startStepName="wf-start"/>
</wf>