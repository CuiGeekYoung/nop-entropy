<?xml version="1.0" encoding="UTF-8" ?>
<view x:extends="_gen/_NopRuleDefinition.view.xml" x:schema="/nop/schema/xui/xview.xdef"
      xmlns:x="/nop/schema/xdsl.xdef">

    <grids>
        <grid id="list"/>
        <grid id="pick-list"/>
    </grids>

    <forms>
        <form id="view"/>
        <form id="edit" layoutControl="tabs">
            <layout>
                ==>baseInfo[基本信息]====
                ruleName[规则名称]
                ruleVersion[规则版本]
                displayName[显示名称]
                ruleGroup[规则分组]
                ruleType[规则类型]
                description[描述]
                status[状态]
                remark[备注]

                ==>inputsOutputs[输入输出]===

            </layout>
        </form>
        <form id="query">
            <layout>
                ruleName displayName ruleGroup
            </layout>
        </form>
    </forms>

    <pages>
        <crud name="main">
            <rowActions>
                <actionGroup id="row-more-button">
                    <action id="row-edit-rule-nodes" label="@i18n:rule.ruleNodes|规则节点" actionType="drawer">
                        <dialog page="/nop/rule/pages/NopRuleNode/ref-ruleDefinition.page.yaml" size="xl">
                            <data>
                                <ruleId>$ruleId</ruleId>
                                <ruleDefinition>
                                    <displayName>$displayName</displayName>
                                </ruleDefinition>
                            </data>
                        </dialog>
                    </action>
                    <action id="row-update-button"/>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker"/>
    </pages>
</view>